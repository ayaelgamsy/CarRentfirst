
@model EditRolesClaimDto

@{
    ViewData["Title"] = "MangeRolePermition";
}

<div class="title">
    <h4>
        <span> صلاحيات  المجموعة </span>
    </h4>
</div>

<form method="post" asp-action="MangeRolePermition">


    <div class="box mb-3 p-3">
        <div class="row g-2 row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">
            <input type="hidden" asp-for="Id" />
            <div class="col">
                <div class="form-floating mb-2">

                    <input asp-for="Name" class="form-control" readonly="readonly" />
                    <label asp-for="Name">اسم المجموعه</label>

                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="form-label-group">
                    <input type="submit" value="إضافة" class="btn w-100 btn-primary" />
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="form-label-group">
                    <a class="btn w-100 btn-block btn-info" asp-action="Index">الرجوع للرئيسية</a>
                </div>
            </div>

        </div>
    </div>



    <div class="box mb-3 p-3">
        <div class="table-responsive-md">
            <table class="table ">

                <thead>
                    <tr>
                        <th>
                            المجموعه
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>


                    @for (int x = 0; x < Model.Claims.Count; x++)
                    {

                    <tr>


                        <td>
                            <input type="hidden" asp-for="@Model.Claims[x].ClaimValue">
                            <input type="checkbox" class="form-check-input" id="Doc-check" asp-for="@Model.Claims[x].Isselected">
                        </td>
                        <td>
                            <label class="d-none" asp-for="@Model.Claims[x].Isselected">@Model.Claims[x].ClaimValue</label>
                            <label asp-for="@Model.Claims[x].Isselected">@Model.Claims[x].ArName</label>


                        </td>
                        @*<td>
            <label asp-for="@Model.Claims[x].Isselected">@Model.Claims[x].ClaimValue.Split('.')[1]</label>


        </td>
        <td>
            <label asp-for="@Model.Claims[x].Isselected">@Model.Claims[x].ClaimValue.Split('.')[2]</label>


        </td>
        <td>
            <label asp-for="@Model.Claims[x].Isselected">@Model.Claims[x].ClaimValue.Split('.')[0]</label>


        </td>*@
                    </tr>


                    }



                </tbody>


            </table>
        </div>
    </div>




</form>