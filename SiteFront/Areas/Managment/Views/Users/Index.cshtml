@model IEnumerable<UserGetDto>
@{
    ViewData["Title"] = "المستخدمين";
}


<div class="title">
    <h4>
        <span> المستخدمين </span>
    </h4>
</div>
<div class="box mb-3 p-3">
    <div class="row g-2 row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">
        <div class="col">
            <a class="btn w-100 btn-primary" asp-action="Create">اضافة مستخدم</a>
        </div>
    </div>
</div>
<div class="box mb-3 p-3">
    <div class="table-responsive-md">
        <table class="table full-table">
            <thead>
                <tr>
                    <th>
                        المستخدم
                    </th>
                    <th>
                        الايميل
                    </th>
                    <th>
                        التليفون
                    </th>

                    <th>
                        المجموعات
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>


                        <td>
                            @string.Join(" ,", item.Roles.ToList())
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-capitalize">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger text-capitalize ml-4 ">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

