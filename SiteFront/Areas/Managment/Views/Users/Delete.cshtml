

@model Core.Entities.User

@{
    ViewData["Title"] = "Delete";
}

<div class="title">
    <h4>
        <span> هل تريد حذف المستخدم </span>
    </h4>


</div>


<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="row g-4 justify-content-center">
        <div class="col-sm-9 col-md-4 login-form">
            <div class="bg-light align-items-center">
                <div class="p-5">
                    <div class="form-floating mb-2">
                        <input type="text"
                               class="form-control" readonly="readonly"
                               asp-for="Name"
                               placeholder="" />
                        <label asp-for="Name">اسم المستخدم</label>
                       
                    </div>
                    <div class="form-floating mb-2">
                        <input type="text" readonly="readonly"
                               class="form-control"
                               asp-for="PhoneNumber"
                               placeholder="" />
                        <label asp-for="PhoneNumber">رقم الهاتف</label>
                       

                    </div>
                    <div class="form-floating mb-2">
                        <input type="email"
                               class="form-control" readonly="readonly"
                               asp-for="Email"
                               placeholder="" />
                        <label asp-for="PhoneNumber">البريد الالكتروني</label>
                        
                    </div>

                    <div class="form-floating mb-2">
                      
                        <div class="form-floating mb-2">
                            <input class="btn w-100 btn-primary" type="submit" value="حذف المستخدم">
                        </div>
                        <div class="form-floating mb-2">
                            <a class="btn w-100 btn-block btn-info" asp-action="Index">الرجوع للرئيسية</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</form>






