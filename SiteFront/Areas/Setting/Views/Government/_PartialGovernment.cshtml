@model GovernmentRegisterDto


<form asp-action="@(Model.Id !=null ? "Edit" : "Create")" method="post">

 
        <div class="box mb-3 p-3">
            <div class="row g-2 row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">
                <input type="hidden" asp-for="Id" />

                <div class="col">
                    <div class="form-floating mb-2">
                        <input type="text" class="form-control" asp-for="Name" id="" placeholder="" />
                        <label asp-for="Name" for="">اسم المحافظة</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-floating mb-2">
                        <input onkeypress="if (isNaN(this.value + String.fromCharCode(event.keyCode) )) return false;" type="text" class="form-control" maxlength="2" asp-for="Code" id="" placeholder="" />
                        <label asp-for="Code" for="">كود المحافظة</label>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <input type="submit" value="@(Model.Id !=null ? "تعديل" : "حفظ")" asp-area="Setting" asp-controller="Government" asp-action="@(Model.Id !=null ? "Edit" : "Create")" class="btn w-100 btn-primary">
                </div>
            </div>
        </div>
</form>
