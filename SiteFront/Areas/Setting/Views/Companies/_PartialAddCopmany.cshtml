@model CompanyRegisterDto
@{
    
}


<form method="POST" asp-area="Setting" asp-action="@(Model.Id != null ? "Edit" : "Create")">
    <div class="box mb-3 p-3">
        <div class="row g-2 row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">
            <div class="col d-none">
                <div class="form-floating mb-2 ">
                    <input type="text" class="form-control" asp-for="Id" placeholder="" readonly />
                    <label asp-for="Id">الرقم التعريفي</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" asp-for="Name" placeholder="" />
                    <label asp-for="Name">اسم الشركة</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <button class="btn w-100 btn-primary" type="submit"> @(Model.Id != null ? "تعديل" : "حفظ")</button>
            </div>
        </div>
    </div>
</form>