@model CustomerViolationRegisterDto


<form asp-action="@(Model.Id != null ? "Edit": "Create")" method="post" enctype="multipart/form-data">

    <div class="box mb-3 p-3">
        <div class="row g-2 row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">
            <input type="hidden" asp-for="Id" />

            <div class="form-floating mb-2">
                <select class="form-select select2" id="carId" asp-for="CarId" asp-items="@(new SelectList(Model.Cars,"Id","name"))">
                    <option value="">اختر السياره</option>
                </select>
                <label asp-for="CarId" class="form-label">السيارة</label>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="date" class="form-control" id="violationDate" onchange="GetCustomer()" asp-for="ViolationDate" placeholder="" />
                    <label asp-for="ViolationDate" class="form-label">تاريخ المخالفة </label>
                    <span asp-validation-for="ViolationDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-2">
                <select class="form-select select2" asp-for="CustomerId" id="customerid" asp-items="@(new SelectList(Model.Customers,"Id","name"))">
                    <option value="">اختر العميل</option>
                </select>
                <label asp-for="CustomerId" class="form-label">العميل</label>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" id="Total" asp-for="Value" onkeypress="if (isNaN(this.value + String.fromCharCode(event.keyCode) )) return false;" onkeyup="GetRest()" onchange="GetRest()" placeholder="" />
                    <label asp-for="Value" class="form-label">القيمة</label>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="date" class="form-control" asp-for="Date" placeholder="" />
                    <label asp-for="Date" class="form-label">التاريخ </label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" id="Payment" asp-for="Payment" onkeypress="if (isNaN(this.value + String.fromCharCode(event.keyCode) )) return false;" onkeyup="GetRest()" onchange="GetRest()" placeholder="" />
                    <label asp-for="Payment" class="form-label">المدفوع</label>
                    <span asp-validation-for="Payment" class="text-danger"></span>

                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" id="RestValue" asp-for="Rest" readonly onkeypress="if (isNaN(this.value + String.fromCharCode(event.keyCode) )) return false;" placeholder="" />
                    <label asp-for="Rest" class="form-label">الباقي</label>
                    <span asp-validation-for="Rest" class="text-danger"></span>

                </div>
            </div>

            <div class="form-floating mb-2">
                <select class="form-select select2" asp-for="StockId" asp-items="@(new SelectList(Model.Stocks,"Id","name"))">
                    <option value="">اختر الخزنة</option>
                </select>
                <label asp-for="StockId" class="form-label">الخزنة</label>
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" asp-for="ViolationNumber" placeholder="" />
                    <label asp-for="ViolationNumber" class="form-label">رقم المخالفة</label>
                    <span asp-validation-for="ViolationNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" asp-for="ViolationState" placeholder="" />
                    <label asp-for="ViolationState" class="form-label">حالة المخالفة</label>
                    <span asp-validation-for="ViolationState" class="text-danger"></span>
                </div>
            </div>


            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" asp-for="ViolationPlace" placeholder="" />
                    <label asp-for="ViolationPlace" class="form-label">مكان المخالفة</label>
                    <span asp-validation-for="ViolationPlace" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="file" class="form-control" asp-for="ViolationPhotoFile" multiple />
                    <label asp-for="ViolationPhotoFile">صور  المخالفة</label>
                    <span asp-validation-for="ViolationPhotoFile" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control" asp-for="Notes" placeholder="" />
                    <label asp-for="Notes" class="form-label">ملاحظات</label>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <input type="submit" value="@(Model.Id != null ? "تعديل" : "حفظ")" class="btn w-100 btn-primary">
            </div>

        </div>
    </div>
</form>




